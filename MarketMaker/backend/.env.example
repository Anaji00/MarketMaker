# -----------------------------------------------------------------------------
# MarketMaker Backend Environment Configuration
#
# Copy this file to .env and fill in the values.
# -----------------------------------------------------------------------------

# -- DATABASE --
# Connection string for the PostgreSQL database.
# The default value is for running with the provided docker-compose.yml.
DATABASE_URL="postgresql+psycopg://marketmaker:marketmakerpass@db:5432/marketmaker"

# -- DATA SOURCES --
# Comma-separated list of stock tickers to monitor.
STOCK_WATCHLIST="AAPL,GOOGL,TSLA,AMZN,NVDA,MSFT"

# Keyword to search for on Polymarket.
POLYMARKET_QUERY="election"

# (Optional) API token for Quiver Quantitative. If not provided, Quiver data ingestion will be disabled.
QUIVER_API_TOKEN=""

# -- APPLICATION SETTINGS --
# How often (in seconds) the scheduler should run to fetch new data.
POLL_INTERVAL_SECONDS=120

# Anomaly score threshold (0.0 to 1.0) for creating an alert.
ANOMALY_THRESHOLD=0.75

# User-Agent required by the SEC EDGAR API. Should be in the format "Company Name email@address.com".
SEC_USER_AGENT="MarketMaker your.email@example.com"